#!/bin/bash

entries="region\noutput\nwindow\nsave\nedit"

save_entries="region\noutput\nwindow\n"
edit_entries="region\noutput\nwindow\n"
selected=$(echo -e "$entries" | wofi --show=dmenu)

case $selected in
    "output")
        hyprshot --clipboard-only -m output;;
    "region")
        hyprshot --clipboard-only -m region;;
    "window")
        hyprshot --clipboard-only -m window;;
    "save")
        save_selected=$(echo -e "$save_entries" | wofi --show=dmenu)
        case $save_selected in
            "output")
                hyprshot -m output;;
             "region")
                hyprshot -m region;;
            "window")
                hyprshot    -m window;;
        esac
    ;;
    "edit")
        edit_selected=$(echo -e "$edit_entries" | wofi --show=dmenu)
        case $edit_selected in
            "output")
                hyprshot --clipboard-only -m output --raw | swappy -f -;;
            "region")
                hyprshot --clipboard-only  -m region --raw | swappy -f -;;
            "window")
                hyprshot --clipboard-only -m window --raw | swappy -f -;;
        esac
    ;;
esac
